@model EventsListViewModel
@{
    ViewBag.Title = "Events";
}
<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Event</th>
                        <th>Date</th>
                        <th>Registrants</th>
                        <th>Document[s]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Event item in Model.Events)
                    {
                        <tr>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.StartTime.ToShortDateString()
                            </td>
                            <td>
                                @item.RegistrationCount
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-info btn-sm hidden" href="@Url.Action("Notify", new { id = item.EventKey })">
                                        Notify
                                        <span class="glyphicon glyphicon-phone"></span>
                                    </a>
                                    <a class="btn btn-primary btn-sm" href="@Url.Action("SignIn", new { id = item.EventKey })">
                                        Sign-In Sheet
                                        <span class="glyphicon glyphicon-inbox"></span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>