@model EventViewModel
@{
    ViewBag.Title = @Model.Event.Title;
}
<div class="row">
    <div class="col-sm-8">
        <h2>@Model.Event.Title</h2>
        <p>
            @Html.Raw(HttpUtility.HtmlDecode(Model.Event.Description))
        </p>
    </div>
    <div class="col-sm-4">
        <div class="well well-lg">
            @Html.ActionLink("Register Now", "Register", new { id = Model.Event.EventKey }, new { @class = "btn btn-primary btn-lg center-block" })
            <br />         
            <em>
                @Model.Event.RegistrationCount
                &nbsp;
                Attending
            </em>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        <div class="Flexible-container">
            @{
                int height = 250;
                int width = 600;
                int level = 16;
            }
            <iframe width="@width"
                    height="@height"
                    frameborder="0"
                    scrolling="no"
                    marginheight="0"
                    marginwidth="0"
                    src="http://www.bing.com/maps/embed/viewer.aspx?v=3&cp=@Model.Event.Latitude~@Model.Event.Longitude&lvl=@level&w=@width&h=@height&sty=r&typ=s&pp=&ps=55&dir=0&mkt=en-us&src=SHELL&form=BMEMJS"></iframe>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="alert alert-warning">
            <h4>
                @Model.Event.StartTime.ToLongDateString()
            </h4>
            <p>
                @Model.Event.StartTime.ToString("hh:mm tt")
                &nbsp;-&nbsp;
                @Model.Event.EndTime.ToString("hh:mm tt")
            </p>
        </div>
    </div>
</div>