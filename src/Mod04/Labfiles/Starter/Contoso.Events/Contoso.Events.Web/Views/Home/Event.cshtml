@model EventViewModel
@{
    ViewBag.Title = @Model.Event.Title;
}
<div class="row">
    <div class="col-sm-8">
        <h2>@Model.Event.Title</h2>
        <p>
            @Html.Raw(HttpUtility.HtmlDecode(Model.Event.Description))
        </p>
    </div>
    <div class="col-sm-4">
        <div class="well well-lg">
            @Html.ActionLink("Register Now", "Register", new { id = Model.Event.EventKey }, new { @class = "btn btn-default btn-lg center-block", disabled = "disabled" })
            <br />
            @if (Model.Document != null && Model.Document.Generated)
            {
                @Html.ActionLink("Download Sign-In Sheet", "SignIn", new { id = Model.Event.EventKey }, new { @class = "btn btn-default btn-lg center-block", disabled = "disabled" })            
            }
            else
            {
                @Html.ActionLink("Generate Sign-In Sheet", "SignInGen", new { id = Model.Event.EventKey }, new { @class = "btn btn-default btn-lg center-block", disabled = "disabled" })    
            }            
            <em>
                @Model.Event.RegistrationCount
                &nbsp;
                Attending
            </em>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        @Html.DisplayFor(m => m.Event.Location)
    </div>
    <div class="col-sm-6">
        <div class="alert alert-warning">
            <h4>
                @Model.Event.StartTime.ToLongDateString()
            </h4>
            <p>
                @Model.Event.StartTime.ToString("hh:mm tt")
                &nbsp;-&nbsp;
                @Model.Event.EndTime.ToString("hh:mm tt")
            </p>
        </div>
    </div>
</div>