@model System.Data.Entity.Spatial.DbGeography
@{
    int height = 250;
    int width = 600;
    int level = 16;
}
@if (Model != null)
{
    <div class="Flexible-container">
        <iframe width="@width"
                height="@height"
                frameborder="0"
                scrolling="no"
                marginheight="0"
                marginwidth="0"
                src="http://www.bing.com/maps/embed/viewer.aspx?v=3&cp=@Model.Latitude~@Model.Longitude&lvl=@level&w=@width&h=@height&sty=r&typ=s&pp=&ps=55&dir=0&mkt=en-us&src=SHELL&form=BMEMJS"></iframe>
    </div>
}